{
  "name": "Continue + OpenRouter",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {},
  "containerEnv": {
    "CONTINUE_GLOBAL_DIR": "${containerWorkspaceFolder}/.continue"
  },
  "customizations": {
    "vscode": {
      "extensions": ["Continue.continue"],
      "settings": {
        "workbench.startupEditor": "none",
        "workbench.activityBar.visible": true,
        "continue.telemetryEnabled": false,
        "github.copilot.enable": { "*": false },
        "github.copilot.chat.enabled": false
      }
    }
  },
  "updateContentCommand": "bash .devcontainer/setup-continue-config.sh || true",
  "postCreateCommand": "bash .devcontainer/setup-continue-config.sh || true",
  "postAttachCommand": "bash .devcontainer/setup-continue-config.sh || true",
  "postStartCommand": "command -v code >/dev/null 2>&1 && (code --uninstall-extension GitHub.copilot --force; code --uninstall-extension GitHub.copilot-chat --force) 2>/dev/null || true",
  "forwardPorts": []
}
